    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.8.2",
    "typescript-json-schema": "^0.54.0"
  },
  "dependencies": {
    "@tsconfig/node16": "^1.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
