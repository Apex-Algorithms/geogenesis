{
  "private": true,
  "name": "@geogenesis/fact-schema",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "test": "pnpm run test:ts && pnpm run test:wasm",
    "test:wasm": "yarn build:wasm && ts-node test/index.ts",
    "test:ts": "jest",
    "clean": "rimraf build dist",
    "build": "pnpm run build:schema && pnpm run build:ts",
    "build:wasm": "asc assembly/index.ts -o build/test.wasm -t build/test.wat --debug --runtime stub --exportRuntime --bindings raw",
    "build:schema": "npx typescript-json-schema 'src/fact.ts' Root -o build/schema.json --noExtraProps --topRef --required --aliasRefs",
    "build:ts": "npx tsc"
  },
  "devDependencies": {
    "@graphprotocol/graph-ts": "^0.27.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.15",
    "ajv": "^8.11.0",
    "assemblyscript": "^0.21.3",
    "assemblyscript-json": "^1.1.0",
    "jest": "^28.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.8.2",
    "typescript-json-schema": "^0.54.0"
  },
  "dependencies": {
    "@tsconfig/node16": "^1.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
